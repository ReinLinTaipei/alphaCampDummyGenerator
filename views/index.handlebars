<link rel="stylesheet" href="css/mycss.css">

<form action="/" method="POST">
  <div class="text-center">
    <div style="display: inline-block">
      <div class="form-group card-deck">
        {{#each careers}}
        <div class="card {{cardStyle this.career}} mb-3" style="width: 18rem;">
          <img class="card-img-top" src={{this.image}} alt={{this.career}}>
          <div class="card-body"></div>
          <div class="card-footer">
            <input class="form-check-input" type="radio" name="options" value={{this.career}}
              {{#isEqual this.career ../option}} checked {{/isEqual}}>
            <label class="form-check-label"> {{#name this.career}}{{this}}{{/name}}</label>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="form-group row" style="padding-right: 15px">
        <div class="col col-sm-2">
          <button type="submit" class="{{cardStyle 'submit'}} form-control">
            產生幹話
          </button>
        </div>
        <div class="col card text-left {{cardStyle 'dummy'}}">
          <div class="card-body">
            <span class="card-text">
              {{#name option}}身為<b>{{this}}</b>{{../dummy}}吧 {{/name}}
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>